version: '2.2'
services:
  elasticsearch:
    image: registry.cn-shenzhen.aliyuncs.com/yunwei-tools/elk7.1_es_20201104
    #image: docker.elastic.co/elasticsearch/elasticsearch:7.1.1
    container_name: elk_es
    environment:
      - discovery.type=single-node
      - "ES_JAVA_OPTS=-Xms512m -Xmx512m"
    volumes:
      - ./es/data:/usr/share/elasticsearch/data
      - ./es/config:/usr/share/elasticsearch/config
    hostname: elasticsearch
    restart: always
    ports:
      - 9200:9200
      - 9300:9300
  kibana:
    image: registry.cn-shenzhen.aliyuncs.com/yunwei-tools/elk7.1_kibana_20201027
    #image: docker.elastic.co/kibana/kibana:7.1.1
    container_name: elk_kibana
    environment:
      - elasticsearch.hosts=http://elasticsearch:9200
    volumes:
      - /etc/localtime:/etc/localtime
      - ./kibana/config/kibana.yml:/usr/share/kibana/config/kibana.yml
    hostname: kibana
    depends_on:
      - elasticsearch
    restart: always
    ports:
      - "5601:5601"
  logstash:
    image: registry.cn-shenzhen.aliyuncs.com/yunwei-tools/elk7.1_logstash_20201027
    #image: docker.elastic.co/logstash/logstash-v1:7.1.1
    container_name: elk_logstash
    hostname: logstash
    restart: always
    privileged: true
    volumes:
      - /etc/localtime:/etc/localtime
      - ./logstash/pipeline/logstash.conf:/usr/share/logstash/pipeline/logstash.conf
      - /data/shell/dd.sh:/dd.sh
    depends_on:
      - elasticsearch
    ports:
      - 9600:9600
      - 5044:5044
